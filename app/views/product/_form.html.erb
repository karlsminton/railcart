<%= form_for @product, url: product_save_path do |form| %>
  <%= form.hidden_field :id %>
  <div class="field">
    <%= form.label :name, 'Product Name' %>
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.label :sku, 'SKU' %>
    <%= form.text_field :sku %>
  </div>
  <div class="field">
    <%= form.label :url, 'URL Key' %>
    <%= form.text_field :url %>
  </div>
  <div class="field">
    <%= form.label :price, 'Price (Â£)' %>
    <%= form.text_field :price %>
  </div>
  <div class="subsection">
    <%= form.fields_for :images do |image| %>
        <% image.file_field :image %>
    <% end %>
  </div>
  <div class="subsection">
    <%= form.fields_for :categories do |c| %>
      <%
        c.select :category, options_from_collection_for_select(Category.all, :id, :name, {:selected => @product.categories.map(&:id)}), {include_blank: false}, {class: 'multiselect', multiple: true}
      %>
    <% end %>
  </div>
  <div class="field">
    <%= form.label :enabled, 'Is Active' %>
    <%= form.check_box :enabled %>
  </div>
  <div class="field">
    <%= form.label :description, 'Description' %>
    <%= form.text_area :description %>
  </div>
  <div class="field">
    <%= form.label :stock_qty, 'Stock Available' %>
    <%= form.text_field :stock_qty %>
  </div>
  <%= form.submit %>
<% end %>