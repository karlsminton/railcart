<h1><%= @category.name %></h1>
<div class="content">
  <p><%= @category.description %></p>
</div>
<div class="products uk-flex uk-flex-row">
  <% @category.products.each do |product| %>
    <div class="product uk-padding-small uk-width-1-3">
      <a href="<%= product_path(product.url) %>">
        <div class="inner">
          <% image = product.images.first %>
          <% if image.nil? %>
            <%= image_tag 'placeholder-image.png', size: '320x320' %>
          <% else %>
            <%= image_tag product.images.first.path, size: '320x320' %>
          <% end %>
          <p class="name"><%= product.name %></p>
          <p class="price">Â£<%= product.price %></p>
        </div>
      </a>
    </div>
  <% end %>
</div>
